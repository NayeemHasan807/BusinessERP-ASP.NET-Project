            continue;
        }
        else if (count == 3)
        {
            d = item;
            count++;
            continue;
        }
        else if (count == 4)
        {
            <div class="row">
                <div class="col-md-3">
                    <div class="card">
                        <img class="image" src=@Url.Content(a.ProductPicture) style="width:100%">
                        <h4>@Html.DisplayFor(modelItem => a.ProductName)</h4>
                        <p class="price"> $@Html.DisplayFor(modelItem => a.UnitPrice)</p>
                        <p class="quantity"> Available Quantity:@Html.DisplayFor(modelItem => a.Quantity)</p>
                        <p class="body">
                            @Html.DisplayFor(modelItem => a.LongDescription)<br />
                        </p>
                        <p><a href="/CompanyProduct/ViewProduct/@Html.DisplayFor(modelItem => a.ProductId)"><button>View</button></a></p>
                    </div>
