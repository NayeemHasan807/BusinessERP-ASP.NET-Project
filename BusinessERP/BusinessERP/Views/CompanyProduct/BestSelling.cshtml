@model IEnumerable<BusinessERP.Models.CompanyProduct>

@{
    ViewBag.Title = "BestSelling";
    Layout = "~/Views/Customer/_Layout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>Top 5 Best Selling Products</h2>
<br />
@{
