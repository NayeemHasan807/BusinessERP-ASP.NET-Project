@model BusinessERP.Models.ViewModels.ProfileViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Profile/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<img src=@Url.Content(Model.ProfilePicture.ToString()) alt="Avater" width="100" height="100" />
<br />
<fieldset>
    <table id="view">
        <tr>
            <td>Name:</td>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <td>Username :</td>
            <td>@Model.UserName</td>
        </tr>
        <tr>
            <td>Email :</td>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <td>Gender :</td>
            <td>@Model.Gender</td>
        </tr>
        <tr>
            <td>Date Of Birth :</td>
            <td>@Model.DateOfBirth.ToString("yyyy-MM-dd")</td>
        </tr>
        <tr>
            <td>Address :</td>
            <td>@Model.Address</td>
        </tr>
        @if (Session["UserType"].ToString() != "Customer" & Session["UserType"].ToString() != "Vendor")
        {
            var jobdetails = TempData["JobDetails"] as BusinessERP.Models.JobCategory;
            <tr>
                <td>Joining Date :</td>
                <td>@Model.JoiningDate.ToString("yyyy-MM-dd")</td>
            </tr>
            <tr>
                <td>Job Title :</td>
                <td>@jobdetails.JobTitle</td>
            </tr>
        }
        <tr>
            <td>Profile Status :</td>
            <td>@Model.Status</td>
        </tr>
    </table>
</fieldset>
<div>
    <a href="/Profile/UpdateProfile">
        <button type="button">
            Update Profile
        </button>
    </a>
    <a href="/Profile/ChangePassword">
        <button type="button">
            Change Password
        </button>
    </a>
</div>
<div>
    <span style="color:forestgreen;background-color:white">
        @TempData["ChangePassConf"]
    </span>
</div>
